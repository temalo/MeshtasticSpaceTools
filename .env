# Meshtastic Connection Configuration
# Connection type: 'serial' or 'tcp'
MESHTASTIC_CONNECTION_TYPE=tcp

# For Serial Connection
# Example: COM3 (Windows), /dev/ttyUSB0 (Linux), /dev/cu.usbserial-* (Mac)
# MESHTASTIC_SERIAL_PORT=COM3

# For TCP Connection
# Example: 192.168.1.100
MESHTASTIC_TCP_HOST=192.168.4.189

# Meshtastic Channel Index (0-7, default channel is 0)
MESHTASTIC_CHANNEL=3

# Enable/Disable actual sending to Meshtastic (true/false)
# Set to false for testing without sending to device
MESHTASTIC_SEND_ENABLED=true

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO